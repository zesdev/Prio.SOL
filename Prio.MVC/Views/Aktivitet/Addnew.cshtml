@model Prio.BL.Database.Models.AktivitetModel

<center>
    <input type="button" class="btn btn bg-danger" onclick="location.href='../aktivitet/index'" value="Gå tillbaka" />
    <br />
    @using (Html.BeginForm())
    {
        <b>Titel på aktiviteten:</b>
        <br />
        @Html.TextBoxFor(x => x.TitelPåAktivitet)
        <br />
        <b>Prioritet</b>
        <br />
        @Html.TextBoxFor(x => x.Prioritet)
        <br />
        <b>@Html.CheckBoxFor(x => x.Måndag) Måndag</b><br />
        <b>@Html.CheckBoxFor(x => x.Tisdag) Tisdag</b><br />
        <b>@Html.CheckBoxFor(x => x.Onsdag) Onsdag</b><br />
        <b>@Html.CheckBoxFor(x => x.Torsdag) Torsdag</b><br />
        <b>@Html.CheckBoxFor(x => x.Fredag) Fredag</b><br />
        <b>@Html.CheckBoxFor(x => x.Lördag) Lördag</b><br />
        <b>@Html.CheckBoxFor(x => x.Söndag) Söndag</b><br />

        <input type="submit" value="Lägg till" class="btn btn-success" />

    }
</center>